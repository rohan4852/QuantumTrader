{
    "manifest_version": 3,
    "name": "GhostTrader: AI Market Seer",
    "version": "1.0.0",
    "description": "Passive chart analysis assistant powered by Gemini AI",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "AITrader - Chart Analysis"
    }
}