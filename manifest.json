{
    "manifest_version": 3,
    "name": "QuantumTrader: Advanced AI Market Analysis",
    "version": "2.0.0",
    "description": "Advanced quantitative trading analysis with video capture, multi-timeframe analysis, and market data integration for Olymp Trade.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabCapture",
        "desktopCapture"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://olymptrade.com/*",
        "https://*.olymptrade.com/*",
        "https://finnhub.io/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "QuantumTrader"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}